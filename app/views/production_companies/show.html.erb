<h1><%= flash[:notice] %></h1>
<h1><%= @production_company.name %>'s Bookings</h1>
<h3><%= @production_company.address %></h3>
<%= button_to "Delete this company", @production_company, method: :delete %><br><br>

<%= link_to "Create a New Booking", new_booking_path(name: "#{@production_company.name}", prod_id: "#{@production_company.id}") %><br><br>

  <html>
  <head>
  <style>
  table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      table-layout: fixed;
  }
  </style>
  </head>
  <body>
  <table style="width:100%">
    <tr>
      <th>Show</th>
      <th>Role</th>
      <th>Salary</th>
      <th>Sex</th>
      <th>Duration (Days)</th>
      <th>Available</th>
      <th>Edit Booking</th>
      <th>Delete Booking</th>
    </tr>

      <% @production_company.bookings.each do |booking| %>
      <tr>
      <td><%=booking.show_name %></td>
      <td><%=booking.role_name %></td>
      <td><%=booking.salary %></td>
      <td><%=booking.sex %></td>
      <td><%=booking.duration_days %></td>
      <td><%=booking.available %></td>
      <td><%= link_to "Edit this Booking", edit_booking_path(booking) %></td>
      <td><%= link_to "Delete this Booking", booking_path(booking),  method: :delete %></td>
      <!-- <%= link_to "Click to Create", new_booking_path(show_name: "#{booking.show_name}", prod_id: "#{booking.production_company_id}") %> -->

    </tr>
    <% end %>
  </table><br><br>
  <%= link_to "Back to all companies", production_companies_path %>


  </body>
  </html>
